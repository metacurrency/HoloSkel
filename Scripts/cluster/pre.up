#!/bin/sh
echo #!/bin/sh $0

clusterDir="/chain.seeded/cluster/$seedID"
mkdir -p $clusterDir
touch $clusterDir/.cluster.lock


echo "hc init $HOSTNAME"
hc init $HOSTNAME
echo

echo "hc clone /chain.source devchain"
hc clone /chain.source devchain
echo 

echo "hc test devchain"
hc test devchain
echo

echo "hc seed devchain"
hc seed devchain
echo

ls /home/user/.holochain
cp /home/user/.holochain/devchain /chain.seeded -r
ls /chain.seeded
